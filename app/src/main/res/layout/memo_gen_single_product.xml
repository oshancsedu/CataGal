<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="2dp"
    android:background="@color/app_theme_color_minor"
    android:orientation="vertical"
    android:padding="5dp">


    <com.devspark.robototextview.widget.RobotoTextView
        android:id="@+id/tvPackSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:background="@color/red_900"
        android:padding="7dp"
        android:text="Family Pack"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/app_theme_color_minor"
        app:typeface="serif" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:orientation="horizontal"
        android:padding="4dp">

        <TextView
            android:id="@+id/tvUnit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="New Text"
            android:textAlignment="center"
            android:textColor="@color/app_theme_color" />

        <TextView
            android:id="@+id/tvPacking"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="New Text"
            android:textAlignment="center"
            android:textColor="@color/app_theme_color" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:orientation="horizontal"
        android:padding="4dp">

        <com.iangclifton.android.floatlabel.FloatLabel
            android:id="@+id/etAmount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:ems="10"
            android:hint="Quantity"
            android:inputType="number"
            android:textColor="@color/app_theme_color" />

        <info.hoang8f.widget.FButton
            android:id="@+id/btCalculate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="Calculate"
            android:textColor="@android:color/white"
            fbutton:buttonColor="@color/cyan_800"
            fbutton:shadowEnabled="true" />


    </LinearLayout>


    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="MRP"
        android:textColor="@color/app_theme_color" />

    <com.iangclifton.android.floatlabel.FloatLabel
        android:id="@+id/etComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:hint="Put your comment"
        android:textColor="@color/app_theme_color" />

    <info.hoang8f.widget.FButton
        android:id="@+id/btSendMemo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        android:padding="5dp"
        android:text="Send"
        android:textColor="@android:color/white"
        fbutton:buttonColor="@color/cyan_800"
        fbutton:shadowEnabled="true" />
</LinearLayout>