<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:background="@color/app_theme_color_minor"
    android:orientation="vertical"
    android:padding="5dp">

    <com.devspark.robototextview.widget.RobotoTextView
        android:id="@+id/tvPackSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:background="@color/memo_size_haeder"
        android:padding="7dp"
        android:text="Family Pack"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/app_theme_color_minor"
        app:typeface="serif" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:orientation="horizontal"
        android:padding="4dp">

        <TextView
            android:id="@+id/tvContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="New Text"
            android:textAlignment="center"
            android:textColor="@color/app_theme_color" />

        <TextView
            android:id="@+id/tvQuantity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="New Text"
            android:textAlignment="center"
            android:textColor="@color/app_theme_color" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:orientation="horizontal"
        android:padding="4dp">

        <com.iangclifton.android.floatlabel.FloatLabel
            android:id="@+id/etCarton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="number"
            android:textColor="@color/app_theme_color" />


        <com.iangclifton.android.floatlabel.FloatLabel
            android:id="@+id/etPacket"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Packet"
            android:inputType="number"
            android:textColor="@color/app_theme_color" />

        <info.hoang8f.widget.FButton
            android:id="@+id/btCalculate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="Calculate"
            android:textColor="@android:color/white"
            fbutton:buttonColor="@color/cyan_800"
            fbutton:shadowEnabled="true" />


    </LinearLayout>


    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="MRP"
        android:textColor="@color/app_theme_color" />

    <com.iangclifton.android.floatlabel.FloatLabel
        android:id="@+id/etComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:hint="Put your comment"
        android:textColor="@color/app_theme_color" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <info.hoang8f.widget.FButton
            android:id="@+id/btAddItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:padding="5dp"
            android:text="Add"
            android:textColor="@android:color/white"
            fbutton:buttonColor="@color/cyan_800"
            fbutton:shadowEnabled="true" />

        <info.hoang8f.widget.FButton
            android:id="@+id/btRemoveItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:padding="5dp"
            android:text="Remove"
            android:textColor="@android:color/white"
            fbutton:buttonColor="@color/red_700"
            fbutton:shadowEnabled="true" />
    </RelativeLayout>
</LinearLayout>